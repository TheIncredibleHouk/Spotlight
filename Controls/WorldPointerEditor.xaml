<UserControl x:Class="Spotlight.WorldPointerEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Spotlight"
             Background="#000000"
             mc:Ignorable="d" d:DesignWidth="345">
    <Border HorizontalAlignment="Stretch" BorderBrush="#FF3E3E3E" Padding="4" BorderThickness="1, 1, 0, 1">
        <StackPanel Orientation="Horizontal" Margin="5">
            <Button Width="50" Click="Button_Click">
                <Image Source=".\Icons\Level.png" Width="20" Height="20" />
            </Button>
            <ComboBox Margin="0" SelectionChanged="LevelList_SelectionChanged" SelectedValuePath="Id" DisplayMemberPath="DisplayName" Width="290" x:Name="LevelList" />
        </StackPanel>
    </Border>
</UserControl>