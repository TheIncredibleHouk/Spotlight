<UserControl x:Class="Spotlight.TileBlockSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Width="255"
             Height="255"
             xmlns:local="clr-namespace:Spotlight"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas>
        <Image MouseDown="TileRenderSource_MouseDown" x:Name="TileRenderSource" />
        <Border BorderThickness="1" BorderBrush="Red" x:Name="SelectionRectangle" Width="16" Height="16">
            <Border BorderThickness="1" Background="#60FFFFFF" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="White" />
        </Border>
    </Canvas>
</UserControl>
