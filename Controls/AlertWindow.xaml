<Window x:Class="Spotlight.AlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spotlight"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Background="Black"
        Padding="10"
        Width="400"
        Height="135"
        KeyDown="Window_KeyDown"
        Title="Alert Window" d:DesignHeight="134.688">
    <StackPanel Orientation="Vertical">
        <TextBlock HorizontalAlignment="Center" x:Name="DisplayText" Margin="0, 10, 0, 10" >This is a sample display text!</TextBlock>
        <Border BorderThickness="00" BorderBrush="White" Margin="10, 0 10, 0" Padding="0, 10, 0, 0">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button x:Name="OkButton" Click="OkButton_Click">OK</Button>
            </StackPanel>
        </Border>
    </StackPanel>
</Window>