<UserControl x:Class="Spotlight.Controls.TipEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Spotlight.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="300">
    <StackPanel>
        <ScrollViewer Height="300" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Auto">
            <StackPanel Orientation="Horizontal" Name="TipsImages"></StackPanel>
        </ScrollViewer>
        <TextBlock>Header</TextBlock>
        <TextBox x:Name="TipHeader"></TextBox>
        <TextBlock>Description</TextBlock>
        <TextBox Height="300" x:Name="TipDescription"></TextBox>
    </StackPanel>
</UserControl>
