<UserControl x:Class="Spotlight.PaletteItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Spotlight"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="128">
    <StackPanel Orientation="Horizontal">
        <Rectangle x:Name="Color1" Width="32" Height="32" Fill="#000000" />
        <Rectangle x:Name="Color2" Width="32" Height="32" Fill="#FFFFFF" />
        <Rectangle x:Name="Color3" Width="32" Height="32" Fill="#000000" />
        <Rectangle x:Name="Color4" Width="32" Height="32" Fill="#FFFFFF" />
    </StackPanel>
</UserControl>
